<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="visao.BotaoController">
    <children>
        <!-- Imagem de fundo principal -->
        <ImageView fitHeight="400.0" fitWidth="600.0" layoutX="0.0" layoutY="0.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../img/malhar.jpg" />
            </image>
        </ImageView>
        <!-- Descrição da academia -->
        <Label layoutX="20.0" layoutY="50.0" text="Bem-vindo à Mash Fit!" textFill="WHITE">
            <font>
                <Font name="Arial" size="24.0" />
            </font>
        </Label>
        <Label layoutX="20.0" layoutY="100.0" text="Mash Fit se dedica a um ambiente moderno e motivador." textFill="WHITE">
            <font>
                <Font name="Arial" size="18.0" />
            </font>
        </Label>
        <Label layoutX="20.0" layoutY="170.0" text="Equipamentos de última geração e profissionais qualificados." textFill="WHITE">
            <font>
                <Font name="Arial" size="18.0" />
            </font>
        </Label>
        <Label layoutX="20.0" layoutY="240.0" text="Conheça nossa unidade e faça parte da família Mash Fit!" textFill="WHITE">
            <font>
                <Font name="Arial" size="18.0" />
            </font>
        </Label>
        <!-- Botões de ação -->
        <Button fx:id="botaoCadastrar" layoutX="100.0" layoutY="320.0" mnemonicParsing="false" style="-fx-background-color: #000000;" text="Cadastrar" textFill="WHITE" onAction="#handleBotaoCadastrar">
            <font>
                <Font name="Arial" size="16.0" />
            </font>
        </Button>
        <Button fx:id="botaoExcluir" layoutX="200.0" layoutY="320.0" mnemonicParsing="false" style="-fx-background-color: #000000;" text="Excluir" textFill="WHITE" onAction="#handleBotaoExcluir">
            <font>
                <Font name="Arial" size="16.0" />
            </font>
        </Button>
        <Button fx:id="botaoEditar" layoutX="300.0" layoutY="320.0" mnemonicParsing="false" style="-fx-background-color: #000000;" text="Editar" textFill="WHITE" onAction="#handleBotaoEditar">
            <font>
                <Font name="Arial" size="16.0" />
            </font>
        </Button>
        <Button fx:id="botaoLerInformacoes" layoutX="400.0" layoutY="320.0" mnemonicParsing="false" style="-fx-background-color: #000000;" text="Ler Informações" textFill="WHITE" onAction="#handleBotaoLerInformacoes">
            <font>
                <Font name="Arial" size="16.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
