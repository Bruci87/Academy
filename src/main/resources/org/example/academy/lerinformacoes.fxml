                <Label fx:id="nomeLabel" layoutX="150.0" layoutY="270.0" text="Nome: " textFill="WHITE"/>
                <Label fx:id="emailLabel" layoutX="150.0" layoutY="300.0" text="E-mail: " textFill="WHITE"/>
                <Label fx:id="matriculaLabel" layoutX="150.0" layoutY="330.0" text="Matrícula: " textFill="WHITE"/>
            </children>
        </Pane>
    </children>
</AnchorPane>
